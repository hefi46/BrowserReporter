{
  "manifest_version": 3,
  "name": "Browser History Reporter",
  "version": "1.0",
  "description": "Reports browser history to local server with AD authentication",
  "permissions": [
    "history",
    "identity",
    "identity.email",
    "storage"
  ],
  "host_permissions": [
    "http://localhost:3000/*",
    "http://browser-reporter.local/*",
    "https://browser-reporter.local/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "icons/icon16.png",
      "48": "icons/icon48.png",
      "128": "icons/icon128.png"
    }
  },
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
} 